<%- include("partials/header.ejs") %>

<body>
  <section class="add-blog-container">
    <h2 class="page-title">Share Your Thoughts!</h2>
    <form action="/submit-blog" method="post" class="blog-form">
      <!-- Name input -->
      <label for="name">Author Name:</label><br />
      <input
        type="text"
        id="name"
        name="name"
        placeholder="ex: Haytham"
        required
      /><br /><br />

      <!-- Blog Title input -->
      <label for="title">Blog Title:</label><br />
      <input
        type="text"
        id="title"
        name="title"
        placeholder="Blog Title"
        required
      /><br /><br />

      <!-- Dropdown menu for topic selection -->
      <label for="topic">Choose a Topic:</label><br />
      <select id="topic" name="topic" required>
        <option value="">--Select a Topic--</option>
        <option value="technology">Technology</option>
        <option value="lifestyle">Lifestyle</option>
        <option value="health">Health</option>
        <option value="education">Education</option>
        <option value="travel">Travel</option>
        <option value="business">Business</option>
        <option value="sports">Sports</option></select
      ><br /><br />

      <label for="content">Your Blog Content:</label><br />
      <textarea
        id="content"
        name="content"
        rows="10"
        cols="50"
        placeholder="Write your blog content here..."
        required
      ></textarea
      ><br /><br />

      <input type="submit" value="Add Blog" class="add-button" />
    </form>
  </section>
</body>

